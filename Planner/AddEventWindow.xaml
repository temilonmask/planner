<Window x:Class="Planner.UI.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planner.UI"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AddEventWindow" Height="349" Width="442">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="114*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <TextBox FontSize="20" Name="NameTextBox" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Добавтье название" Foreground="Black" Margin="57,0,35,0" Grid.ColumnSpan="2" Height="36"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Height="61" Width="100">
            <DatePicker Width="100" materialDesign:HintAssist.Hint="Дата начала" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Name="StartDayPicker"/>
            <materialDesign:TimePicker materialDesign:HintAssist.Hint="Время начала" Is24Hours="True" Name="StartTimePicker" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Height="61" Width="100">
            <DatePicker Width="100" materialDesign:HintAssist.Hint="Дата окончания" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Name="EndDayPicker"/>
            <materialDesign:TimePicker materialDesign:HintAssist.Hint="Время окончания" Is24Hours="True" Name="EndTimePicker" Width="100"/>
        </StackPanel>
        <TextBox Name="Description" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Description" FontSize="12" BorderBrush="Gray" BorderThickness="1" Height="108" Margin="57,0,64,0"/>
        <Button Grid.Row="3" BorderThickness="0" Content="Cancel" FontSize="12" BorderBrush="DeepPink" Background="White" materialDesign:ButtonAssist.CornerRadius="15"  Foreground="DeepPink" HorizontalAlignment="Right" Height="30" Width="80" VerticalAlignment="Center" Click="CancelButtonClick"/>
        <Button Grid.Row="3" Grid.Column="1" BorderThickness="0" Content="Add" FontSize="12" BorderBrush="DeepPink" Background="White" materialDesign:ButtonAssist.CornerRadius="15"  Foreground="DeepPink" HorizontalAlignment="Left" Height="30" Width="80" VerticalAlignment="Center" Click="AddEventButtonClick"/>
    </Grid>
</Window>
